<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Default application theme. -->
    <style name="DefaultTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/DefaultBarStyle</item>
        <item name="android:colorButtonNormal">@drawable/button_selector</item>
        <item name="colorButtonNormal">@drawable/button_selector</item>
        <item name="android:buttonStyle">@style/DefaultButtonStyle</item>
    </style>

    <!-- Default bar style. -->
    <style name="DefaultBarStyle" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Remove shadow below app bar -->
        <item name="elevation">0dp</item>
    </style>

    <!-- Default button style. -->
    <style name="DefaultButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorTitle</item>

    </style>
</resources>